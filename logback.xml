<?xml version="1.0" encoding="UTF-8"?>
<!--
	For information about how to configure Logback,
	see http://logback.qos.ch/manual/configuration.html
-->
<configuration>
	<property file="default.properties" />
	<property file="bamboo.properties" />
	<property file="my.properties" />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
	    </filter>
		<encoder>
			<pattern>%date{HH:mm:ss.SSS} %5level in %logger.%method\(\) - %message - %file:%line%n</pattern>
		</encoder>
	</appender>

	<appender name="SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
	    <discriminator>
      		<key>class</key>
      		<defaultValue>_configuration</defaultValue>
    	</discriminator>
    	<sift>
      		<appender name="FILE-${class}" class="ch.qos.logback.core.FileAppender">
	        	<file>${log.dir}/${class}.html</file>
	        	<append>false</append>
	        	<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
					<layout class="ch.qos.logback.classic.html.HTMLLayout">
						<pattern>%date{HH:mm:ss.SSS}%level%logger%method%message%file%line</pattern>
					</layout>
			    </encoder>
      		</appender>
    	</sift>
  	</appender>
	<root level="ALL">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="SIFT" />
	</root>

	<include resource="my.logback.xml"/>
</configuration>
